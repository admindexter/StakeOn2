        <div id="form_content_body">

          <div id="form_content_text">

            <div id="content_body">

              <%- if show_title? -%>
                <h3><%=h yield(:title) %></h3>
              <%- end -%>

              <div id="already_have_account">
                Do not have an account? <%= link_to "Sign Up", new_user_path %>
              <!-- end #already_have_account --></div>

              <% form_for @user_session do |f| %>
                <%= f.error_messages %>
                <p>
                  <%= f.label :username %><br />
                  <%= f.text_field :username %>
                </p>
                <p>
                  <%= f.label :password %><br />
                  <%= f.password_field :password %>
                </p>
                <p><%= f.submit %></p>
              <% end %>

